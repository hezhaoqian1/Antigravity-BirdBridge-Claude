{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Antigravity Desktop",
  "version": "0.1.0",
  "identifier": "com.antigravity.desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "Antigravity Desktop",
        "width": 500,
        "height": 700,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "macOS": {
      "entitlements": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
